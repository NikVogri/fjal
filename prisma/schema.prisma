generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model File {
  id        String   @id @unique
  fileName  String   @db.VarChar(255)
  size      Int
  type      String   @db.VarChar(255)
  createdAt DateTime @default(now()) @db.Timestamp(6)
  expiresAt DateTime @db.Timestamp(6)
}
